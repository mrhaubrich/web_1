---
import NewsType from "@components/home/NewsType.astro";
import ZoomOnHoverImage from "../ZoomOnHoverImage.astro";

type Props = NewsModel;

const { slug, title, description, image, alt, type } = Astro.props;
---

<a
  class="relative group shadow-md shadow-dark rounded-md"
  href={`/news/${slug}`}
>
  <ZoomOnHoverImage src={image} alt={alt} loading="eager" />
  <div
    class="bg-gradient-to-t from-dark to-transparent opacity-80 p-4 absolute bottom-0 w-full rounded-md"
  >
    <h2
      class="text-dark-text text-lg font-extrabold text-pretty [text-shadow:_1px_1px_black]"
    >
      {title}
    </h2>
    <p class="text-dark-text">{description}</p>
  </div>
  <div class="absolute top-3 left-3">
    <NewsType>
      <p>{type}</p>
    </NewsType>
  </div>
</a>
