---
import { Image } from "astro:assets";

interface Props {
  href: string;
  image: string;
  alt: string;
  loading?: "lazy" | "eager";
}

const { href, image, alt, loading = "lazy" } = Astro.props;
---

<div class="overflow-clip h-full rounded-md">
  <a href={href}>
    <Image
      src={image}
      alt={alt}
      inferSize={true}
      loading={loading}
      class="object-cover w-full h-full group-hover:scale-105 transition-all duration-300 transform-gpu"
    />
  </a>
</div>
