---
import NewsType from "@components/home/NewsType.astro";
import { Image } from "astro:assets";

type Props = NewsModel;

const { slug, title, description, image, alt, type } = Astro.props;
---

<div class="overflow-clip h-full rounded-md relative group" id={title}>
  <a href={`/news/${slug}`}>
    <Image
      src={image}
      alt={alt}
      inferSize={true}
      class="object-cover w-full h-full group-hover:scale-105 transition-transform duration-300 transform-gpu"
    />
    <div
      class="bg-gradient-to-t from-dark to-transparent opacity-80 p-4 absolute bottom-0 w-full"
    >
      <h2
        class="text-dark-text text-lg font-extrabold text-pretty [text-shadow:_1px_1px_black]"
      >
        {title}
      </h2>
      <p class="text-dark-text">{description}</p>
    </div>
    <div class="absolute top-3 left-3">
      <NewsType>
        <p>{type}</p>
      </NewsType>
    </div>
  </a>
</div>
