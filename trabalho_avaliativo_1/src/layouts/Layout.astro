---
import Footer from "@components/layout/Footer.astro";
import LogoBar from "@components/layout/LogoBar.astro";
import NavBar from "@components/layout/NavBar.astro";
import SpeedInsights from "@vercel/speed-insights/astro";

interface Props {
  title: string;
  class?: string;
}

const { title, class: Class } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Site de notÃ­cias" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="flex min-h-screen flex-col">
    <SpeedInsights />
    <div class="hidden sm:block">
      <LogoBar />
    </div>
    <NavBar />
    <div
      class=`container w-full mx-auto px-4 sm:px-6 lg:px-8 flex flex-col grow ${Class}`
    >
      <slot />
    </div>
    <Footer />
  </body>
</html>
